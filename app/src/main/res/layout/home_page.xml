<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:background="@color/background_gray"
    >
    <FrameLayout
        android:id="@+id/home_page_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_page_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f7f7f7"
        app:itemIconTint="@color/nav_select_color"
        app:itemRippleColor="@color/background_white"
        app:itemTextColor="@color/nav_select_color"
        app:menu="@menu/home_page_nav_menu" />

</LinearLayout>